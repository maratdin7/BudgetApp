<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable name="viewModel" type="com.example.budget.viewModel.HeaderItemFilterViewModel"/>

    </data>
    <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

    >

        <com.google.android.material.chip.Chip
                android:id="@+id/sortBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:text="@{viewModel.sortBy ?? @string/sort_by}"
        />

        <com.google.android.material.chip.Chip
                android:id="@+id/operationType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:text="@{viewModel.operationType ?? @string/operation_type}"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/sumRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:text="@{viewModel.sumRangeToString() ?? @string/sum_range}"
        />

        <com.google.android.material.chip.Chip
                android:id="@+id/dateRange"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.dateRangeToString() ?? @string/date}"

        />

    </com.google.android.material.chip.ChipGroup>
</layout>